FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy common scripts
COPY scripts/common/ /app/scripts/common/

# Copy worker script
COPY scripts/tracks/analysis/stay_statistics_worker.py /app/

# Set Python path
ENV PYTHONPATH=/app

# Default command
CMD ["python", "/app/stay_statistics_worker.py"]
